NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=paradisedental
DB_USER=your-db-username
DB_PASSWORD=your-db-password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Email Configuration (SMTP)
# For Gmail, use App Passwords: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="Paradise Dental <noreply@paradisedental.com>"
ADMIN_EMAIL=admin@paradisedental.com

# SMS Configuration (Twilio)
# Sign up at https://www.twilio.com/ for trial account
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+66XXXXXXXXX

# Admin Panel URL (for email links)
ADMIN_URL=http://localhost:5173

# Logging
LOG_LEVEL=info

# CORS
FRONTEND_URL=http://localhost:5173
