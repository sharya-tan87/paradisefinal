NODE_ENV=development
PORT=3000

# Database Configuration
DB_HOST=127.0.0.1
DB_PORT=3306
DB_NAME=paradisedental
DB_USER=your-db-username
DB_PASSWORD=your-db-password

# JWT Configuration
# Generate secrets with: openssl rand -hex 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_REFRESH_SECRET=your-refresh-token-secret-change-this-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Encryption Key for PHI (Protected Health Information)
# REQUIRED for patient data encryption. Generate with: openssl rand -hex 32
ENCRYPTION_KEY=your-64-character-hex-encryption-key-generate-with-openssl

# Email Configuration (SMTP)
# For Gmail, use App Passwords: https://myaccount.google.com/apppasswords
SMTP_HOST=smtp.gmail.com
SMTP_PORT=465
SMTP_SECURE=true
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM="Paradise Dental <noreply@paradisedental.com>"
ADMIN_EMAIL=admin@paradisedental.com

# SMS Configuration (Twilio)
# Sign up at https://www.twilio.com/ for trial account
TWILIO_ACCOUNT_SID=your-twilio-account-sid
TWILIO_AUTH_TOKEN=your-twilio-auth-token
TWILIO_PHONE_NUMBER=+66XXXXXXXXX

# Admin Panel URL (for email links)
ADMIN_URL=http://localhost:5173

# Logging
LOG_LEVEL=info

# CORS
FRONTEND_URL=http://localhost:5173

# Business Configuration (Optional - defaults exist)
VAT_RATE=0.07
CLINIC_NAME=Paradise Dental Clinic
CLINIC_ADDRESS=123 Sukhumvit Rd, Bangkok
CLINIC_PHONE=02-XXX-XXXX
CLINIC_EMAIL=contact@paradisedental.com
BOOKING_MAX_MONTHS=6
BOOKING_MIN_HOURS=24
SLOT_DURATION=30
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=30
